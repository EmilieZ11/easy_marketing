<resources>
    <!-- GLOBAL -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/CP</item>
        <item name="colorPrimaryDark">@color/CPD</item>
        <item name="colorAccent">@color/CA</item>
    </style>

    <style name="motor">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:visibility">invisible</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
    </style>

    <style name="shadow_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:background">@drawable/shadow_1</item>
    </style>

    <style name="shadow_1_vertical">
        <item name="android:layout_width">5dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/shadow_1_vertical</item>
    </style>


    <!-- Main -->
    <style name="mCartDot">
        <item name="android:layout_width">4dp</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:background">@drawable/circle_white</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="mMenuIcon">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@drawable/m_menu_icon</item>
        <item name="layout_constraintVertical_bias">0.48</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="mMenuIconIV">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:src">@drawable/easy_logo_2_tiny</item>
        <item name="layout_constraintWidth_percent">0.5</item>
        <item name="layout_constraintHeight_percent">0.5</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>


    <!-- Orders -->
    <style name="mRV">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:visibility">gone</item>
        <item name="layout_constraintBottom_toTopOf">@id/oBNV</item>
        <item name="layout_constraintTop_toBottomOf">@id/oTitle</item>
    </style>

    <style name="mCartTBButton">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/hover_tp_to_cp2_weak_1</item>
        <item name="android:padding">15dp</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="mCartItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/mCartItemTV</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">9dp</item>
    </style>

    <style name="mCIList" parent="@style/mCartItem">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:background">@drawable/hover_tp_to_cp_weak_1</item>
    </style>

    <style name="mCILITV">
        <item name="android:textColor">@color/mCILITV</item>
        <item name="android:textSize">14dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:paddingStart">15dp</item>
    </style>

    <style name="mCISpnMark">
        <item name="android:src">@drawable/play_3_ntf</item>
        <item name="android:padding">9dp</item>
        <item name="android:rotation">90</item>
    </style>
</resources>
