<resources>
    <!-- GLOBAL -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/CP</item>
        <item name="colorPrimaryDark">@color/CPD</item>
        <item name="colorAccent">@color/CA</item>
    </style>

    <style name="motor">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:visibility">invisible</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
    </style>

    <style name="shadow_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:background">@drawable/shadow_1</item>
    </style>

    <style name="shadow_1_vertical">
        <item name="android:layout_width">5dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/shadow_1_vertical</item>
    </style>


    <!-- Main -->
    <style name="mCartTBButton">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/hover_tp_to_cp2_weak_1</item>
        <item name="android:padding">15dp</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="mCartItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/mCartItemTV</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">9dp</item>
    </style>

    <style name="mCIList" parent="@style/mCartItem">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:background">@drawable/hover_tp_to_cp_weak_1</item>
    </style>

    <style name="mCILITV">
        <item name="android:textColor">@color/mCILITV</item>
        <item name="android:textSize">14dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:paddingStart">15dp</item>
    </style>


    <!--<style name="">
        <item name=""></item>
    </style>-->
</resources>
